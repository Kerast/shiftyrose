{% extends "CTCoreBundle::layout.html.twig" %}


{% block body_core %}
    <div ui-view="" class="app-body" id="view">

        <!-- ############ PAGE START-->
        <div class="padding">



            <div class="row">

                <div class="col-lg-12" >
                    <div class="box">
                        <ul id="eve-progress-bar">
                            <li >
                                <div id="eve-checkout-step-1">✔</div>
                                <div class="eve-text-done">Sélectionner un produit</div>
