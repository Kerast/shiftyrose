                                    <div class="eve-text-done">Reçu</div>
                                </li>
                            {% else %}
                                <li style="    padding-left: 25%;">
                                    <div id="eve-checkout-step-3">3</div>
                                    <div class="eve-text-not-done">Reçu</div>
                                </li>
                            {% endif %}

                        </ul>
                        <div class="box-divider m-a-0"></div>

                        {% if transactionId is defined %}
                            <div class="box-body p-v-md" >
